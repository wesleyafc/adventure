<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <style>
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            width: 100%;
            background-color: rgb(199, 247, 231);
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px;
        }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }

        .container {

            padding: 16px;
        }
    </style>
    <% posts.forEach(function(post) { %>
        <div class="card">
            <div class="container">

                <img width="50%" height="50%" src="<%= post.imageURL %>" alt="">
                <h1>
                    title: <%= post.title %>
                </h1>
                <p>THIS NEED BE REMOVED ID =
                    <%= post._id %>
                </p>
                <p>
                    description: <%= post.description %>
                </p>

                <p>
                    vip: <%= post.vip %>

                </p>
                <p>
                    likes: <%= post.likes %>

                </p>
            </div>

        </div>
        <br>

        <% }) %>


</body>

</html>